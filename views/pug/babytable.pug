doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  link(href='../css/babytable.css' rel='stylesheet')
  title Sitter table
// table section
// heading section
section
  .main-heading
    h3.header Daystar day care system
    // Add Search Functionality
    div.search-container
      input#search(type='text' placeholder='Search...')
  a.addbutton(href='/api/babyform') Add Baby
  table.table-dark.mytable
    thead
      tr
        th(scope='col') Baby Name
        th(scope='col') Gender
        th(scope='col') Age
        th(scope='col') Location
        th(scope='col') Name of Guardian
        th(scope='col') Time
        th(scope='col') Baby Number
        th(scope='col') Period
        th(scope='col') Fee
        th(scope='col') Actions
    tbody
      if babies && babies.length
        each baby in babies 
          tr 
            th #{baby.babyname}
            td #{baby.gender}
            td #{baby.age}
            td #{baby.location}
            td #{baby.nameofguardian}
            td #{baby.time}
            td #{baby.babynumber}
            td #{baby.period}
            td #{baby.fee}
            td 
              form(action='/api/babytable/delete', method='POST')
                input(type='hidden', name='id', value=baby.id)
                button.mydeletebtn(type='submit') Delete 
            td 
              a.mybtn(href='/api/baby/edit/#{baby._id}') Edit

  script(src='https://kit.fontawesome.com/8bd93dfcff.js' crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
